<hr />

<h3>Board Show</h3>

<ul class="board">
  <li class="title"><%= board.escape('title') %></li>
</ul>

<ul class="lists">
  <em>Lists</em>
  <% board.lists().forEach(function(list){ %>
    <li><b>Ord is <%= list.escape('ord') %></b> <%= list.escape('title') %>
      <ul>
        <em>Cards</em>
        <% list.cards().forEach(function(card){ %>
          <li><%= card.escape('title') %> - <b>Ord <%= card.escape('ord') %></b></li>
        <% }) %>
      </ul>
    </li>
  <% }); %>
</ul>

<button class="delete">Delete Board</button>

<a href="#boards/<%= board.get("id") %>/lists/new">Make a new List</a>

